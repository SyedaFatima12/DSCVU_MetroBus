<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Token_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/card"
            android:layout_alignParentEnd="true">

        </ImageView>

        <TextView
            android:id="@+id/trans_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="TranscationId: "

            >

        </TextView>

        <TextView
            android:id="@+id/card_trans_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/trans_txt"
            android:text="099813r76376"

            >

        </TextView>


       <LinearLayout
           android:id="@+id/linear"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/trans_txt"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/quantity"
               android:layout_marginLeft="5dp"
               android:textColor="@color/black"
               android:layout_marginTop="5dp"
               android:textStyle="bold"
               android:text="Total balance:">

           </TextView>

           <TextView
               android:id="@+id/card_payment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/quantity"
               android:layout_marginLeft="5dp"
               android:textColor="@color/black"
               android:layout_marginTop="5dp"
               android:textStyle="bold"
               android:text="20">

           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:text="|"
               android:textStyle="bold"
               android:layout_marginTop="5dp"
               android:textColor="@color/black">

           </TextView>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/quantity"
               android:layout_marginLeft="5dp"
               android:textColor="@color/black"
               android:layout_marginTop="5dp"
               android:textStyle="bold"
               android:text="Remaining balance:">

           </TextView>

           <TextView
               android:id="@+id/after_payment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/quantity"
               android:layout_marginLeft="5dp"
               android:textColor="@color/black"
               android:layout_marginTop="5dp"
               android:textStyle="bold"
               android:text="">

           </TextView>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_below="@id/linear"
                android:text="Total Token:"
                >
            </TextView>

            <TextView
                android:id="@+id/Card_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_below="@id/linear"
                android:text="4"
                >
            </TextView>




        </LinearLayout>



    </RelativeLayout>




</androidx.cardview.widget.CardView>